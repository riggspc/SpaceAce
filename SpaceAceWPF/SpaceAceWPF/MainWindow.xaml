<Window x:Class="SpaceAceWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="768" Width="1024" KeyDown="Label_KeyDown" KeyUp="Label_KeyUp"
        WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/gameplay_background.png"/>
        </Grid.Background>

        <Image x:Name="Player1" HorizontalAlignment="Left" Height="100" Margin="93,302,0,0" VerticalAlignment="Top" Width="100" Source="Assets/player1_small_with_fire.png" RenderTransformOrigin="-2.77,2.43"/>
        <Label x:Name="Label1" Content="CONTENT" Foreground="White" HorizontalAlignment="Left" Margin="947,694,0,0" VerticalAlignment="Top" Height="36" Width="72" Loaded="Label_Loaded" KeyDown="Label_KeyDown" LostFocus="get_Focus" PreviewKeyDown="Label1_PreviewKeyDown" PreviewMouseDown="Label1_PreviewMouseDown"/>
        <TextBlock x:Name="Score" Foreground="White" HorizontalAlignment="Center" TextAlignment="Center"  Margin="0,0,0,0" VerticalAlignment="Top" Height="208" Width="255" Loaded="Label_Loaded" KeyDown="Label_KeyDown" LostFocus="get_Focus" PreviewKeyDown="Label1_PreviewKeyDown" PreviewMouseDown="Label1_PreviewMouseDown" FontSize="48" RenderTransformOrigin="0.5,0.5" Text="0"/>
    </Grid>
</Window>
